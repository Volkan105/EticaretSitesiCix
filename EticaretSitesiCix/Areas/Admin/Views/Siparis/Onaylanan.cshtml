@model IEnumerable<EticaretSitesiCix.Models.Siparisler>
@{
    ViewData["Title"] = "Onaylanan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btn-group d-grid gap-2 d-md-flex justify-content-md-end" role="group" aria-label="Basic outlined example">
    <a asp-action="Beklenen" asp-area="Admin" asp-controller="Siparis" type="button" class="btn btn-outline-primary">Bekleyen Siparişler</a>
    <a asp-action="Onaylanan" asp-area="Admin" asp-controller="Siparis" type="button" class="btn btn-outline-primary active">Onaylanan Siparişler</a>
    <a asp-action="Kargoda" asp-area="Admin" asp-controller="Siparis" type="button" class="btn btn-outline-primary">Kargolanan Siparişler</a>
    <a asp-action="Index" asp-area="Admin" asp-controller="Siparis" type="button" class="btn btn-outline-primary">Tüm Siparişler</a>
</div>
<br />
<div class="container">

    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Adı
                </th>
                <th>
                    Soyadı
                </th>
                <th>
                    Telefon
                </th>

                <th>
                    Durum
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Ad
                    </td>
                    <td>
                        @item.Soyad
                    </td>
                    <td>
                        @item.TelefonNo
                    </td>

                    <td>
                        @item.SiparisDurumu
                    </td>

                    @if (User.IsInRole(Diger.Rol_Admin))
                    {
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil"></i> Düzenle</a>

                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-pencil"></i> Detaylar</a>

                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready( function ()
        {
            $('#myTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/tr-TR.json',
                },});
        });
    </script>
}



