@model EticaretSitesiCix.Models.Urun

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <h4 class="text-success">Ürün Düzenleme</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden"asp-for="Id" />
            <div class="form-group">
                Ürün Adı
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                Açıklama
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                Ölçü
                <input asp-for="Olcu" class="form-control" />
                <span asp-validation-for="Olcu" class="text-danger"></span>
            </div>
            <div class="form-group">
                Model
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                Fiyat
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                Fotoğraf
                <input asp-for="Fotograf" class="form-control" type="hidden" />
                <input asp-for="Fotograf" class="form-control" type="file" />
                <span asp-validation-for="Fotograf" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AnaSayfadaMi" />Ürün AnaSayfada mı?
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StoktaMi" />ÜrünStokta mı?
                </label>
            </div>
            <div class="form-group">
                Kategori
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Düzenle" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Ürün Listesine Dön</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (Model.Fotograf == null)
        {


            <img src="~/images/Resimler/resim yok.png" width="150" height="100" />
        }
        else
        {
            <img src="@Model.Fotograf" width="150" height="100" />
        }
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
