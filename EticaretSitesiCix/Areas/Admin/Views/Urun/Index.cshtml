@model IEnumerable<EticaretSitesiCix.Models.Urun>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Ürün Ekle</a>
    </p>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Resim
                </th>
                <th>
                    Ürün Adı
                </th>
                <th>
                    AnaSayfada mı?
                </th>
                <th>
                    Stokta mı?
                </th>
                <th>
                    Kategori
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Fotograf == null)
                        {


                            <img src="~/images/Resimler/resim yok.png" width = "100" height = "80" />
                                }
                        else
                        {
                            <img src="@Url.Content(item.Fotograf)" width="100" height="100" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adi)
                    </td>

                    <td>

                        @if (item.AnaSayfadaMi)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i>Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i>Hayır</label>
                        }
                    </td>
                    <td>

                        @if (item.StoktaMi)
                        {
                            
                            <label class="btn btn-success btn-sm"><i class="bi bi-check-lg"></i>Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i>Hayır</label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>




                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready( function ()
        {
            $('#myTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/tr-TR.json',
                },});
        });
    </script>
}